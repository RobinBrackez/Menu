{% extends 'base.html.twig' %}


{% block body %}
            {% for menu in menus %}

                {% set mealFormView = mealForm.createView %}
                <div class="row">
                    <div class="col-sm">
                        {{ menu.date|date("l", false) }}
                    </div>
                    <div class="col-sm">
                        {{ menu.date|date("d-m-Y", false) }}
                    </div>
                    <div class="col-sm">
                        {% if (menu.meal) %}
                            {{ menu.meal.name }}
                        {% endif %}
                        {{ form_start(mealFormView) }}
                            {{ form_widget(mealFormView.meal, {choice: (menu.meal ? menu.meal.id : null)}) }}
                            {{ form_widget(mealFormView.id, {value: menu.id}) }}
                            {{ form_widget(mealFormView.save) }}
                        {{ form_end(mealFormView) }}
                    </div>
                </div>
            {% endfor %}

        {% for msg in app.session.flashBag.get('success') %}
            {{ msg }}
        {% endfor %}

        <a href="{{ path('meal_add_ingredient', {"id": 1, "ingredientName": "Kaas"}) }}">New ingredient to meal</a><br>
        <a href="{{ path('meal_add') }}">New meal</a><br>
{% endblock %}